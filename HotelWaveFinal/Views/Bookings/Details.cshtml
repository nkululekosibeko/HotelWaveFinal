@model HotelWaveFinal.Models.Booking

<div class="container my-5" style="position: relative; padding: 60px 0;">
    <!-- Background Image -->
    <img src="~/assets/royal-master/image/about_banner.jpg" alt="Background"
         class="background-image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">
    <div class="overlay"></div>

    <!-- Card for the booking details -->
    <div class="card shadow border-0 mx-auto" style="width: 85%; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);">
        <div class="card-header bg-info bg-gradient py-3 text-center">
            <h2 class="text-white py-2">Booking Details</h2>
        </div>

        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-8 offset-md-2">
                    <dl class="row">
                        <!-- Custom Label for Customer Name -->
                        <dt class="col-sm-4 fw-bold text-muted">Customer Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerName)</dd>

                        <!-- Custom Label for Phone Number -->
                        <dt class="col-sm-4 fw-bold text-muted">Phone Number</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                        <!-- Custom Label for Check-In Date -->
                        <dt class="col-sm-4 fw-bold text-muted">Check-In Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CheckIn)</dd>

                        <!-- Custom Label for Check-Out Date -->
                        <dt class="col-sm-4 fw-bold text-muted">Check-Out Date</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CheckOut)</dd>

                        <!-- Custom Label for Number of Adults -->
                        <dt class="col-sm-4 fw-bold text-muted">Adults</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NumberOfAdults)</dd>

                        <!-- Custom Label for Number of Children -->
                        <dt class="col-sm-4 fw-bold text-muted">Children</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.NumberOfChildren)</dd>

                        <!-- Custom Label for Room Number -->
                        <dt class="col-sm-4 fw-bold text-muted">Room Number</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Room.RoomNumber)</dd>

                        <!-- Custom Label for Status -->
                        <dt class="col-sm-4 fw-bold text-muted">Booking Status</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                        <!-- Custom Label for Total Cost -->
                        <dt class="col-sm-4 fw-bold text-muted">Total Cost</dt>
                        <dd class="col-sm-8">R @Html.DisplayFor(model => model.TotalCost)</dd>
                    </dl>

                    <!-- Action buttons -->
                    <div class="text-center mt-4">
                        @if (!User.IsInRole(SD.Role_Admin))
                        {
                            @if (Model.Status == "Pending")
                            {
                                <form asp-action="Cancel" asp-route-id="@Model.BookingId" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-danger mx-2" onclick="return confirm('Are you sure you want to cancel this booking?');">
                                        <i class="bi bi-x-circle"></i> Cancel Booking
                                    </button>
                                    @Html.AntiForgeryToken()
                                </form>
                            }
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary mx-2">Go Back Home</a>
                        }
                        else
                        {
                            <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-secondary mx-2">Go Back Home</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
