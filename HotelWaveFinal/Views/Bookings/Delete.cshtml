@model HotelWaveFinal.Models.Booking

<div class="container my-5" style="position: relative; padding: 60px 0;">
    <img src="~/assets/royal-master/image/about_banner.jpg" alt="Background" class="background-image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;"> <!-- Background image -->
    <div class="overlay"></div> <!-- Overlay for dark orange color -->
    <div class="card shadow border-0 mx-auto" style="width: 60%; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);">
        <!-- Adjusted width -->
        <!-- Added border radius and shadow -->
        <div class="card-header bg-danger bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Confirm Deletion</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <h3 class="text-center text-danger">Are you sure you want to delete this booking?</h3>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CustomerName)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CustomerName)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PhoneNumber)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CheckIn)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CheckIn)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CheckOut)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CheckOut)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NumberOfAdults)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NumberOfAdults)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.NumberOfChildren)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NumberOfChildren)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Room)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Room.RoomId)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Status)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Status)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.UserId)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.UserId)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="BookingId" />
                <input type="hidden" asp-for="UserId" />
                <div class="text-center">
                    <input type="submit" value="Delete" class="btn btn-danger me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Overlay styles */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 165, 0, 0.1); /* Dark orange with 30% transparency */
        z-index: 0; /* Below the content but above the background image */
    }

    /* Ensure the image is behind the overlay */
    .background-image {
        z-index: -1; /* Set background image behind everything else */
    }
</style>
