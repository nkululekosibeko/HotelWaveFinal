@model HotelWaveFinal.Models.RoomType

@{
    ViewData["Title"] = "Room Type Details";
}

<div class="container my-5" style="position: relative; padding: 60px 0;">
    <img src="~/assets/royal-master/image/about_banner.jpg" alt="Background" class="background-image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;"> <!-- Background image -->
    <div class="overlay"></div> <!-- Overlay for dark navy color -->
    <div class="card shadow border-0 mx-auto" style="width: 45%; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);">
        <!-- Added border radius and shadow -->
        <div class="card-header bg-secondary bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <div class="text-white py-2">
                        <h2 class="text-primary">Room Type Details</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TypeName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TypeName)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Description)
                </dd>
            </dl>

            <div class="mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.RoomTypeId" class="btn btn-primary">
                    <i class="bi bi-pencil-square me-1"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left-circle me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    /* Overlay styles */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 165, 0, 0.1); /* Dark orange with 30% transparency */
        z-index: 0; /* Below the content but above the background image */
    }

    /* Ensure the image is behind the overlay */
    .background-image {
        z-index: -1; /* Set background image behind everything else */
    }
</style>
