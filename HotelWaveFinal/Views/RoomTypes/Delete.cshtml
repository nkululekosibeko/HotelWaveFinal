@model HotelWaveFinal.Models.RoomType

@{
    ViewData["Title"] = "Delete Room Type";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <div class="text-white py-2">
                    <h2 class="text-white">Delete Room Type</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <h3 class="text-center text-danger">Are you sure you want to delete this room type?</h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.TypeName)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.TypeName)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Description)
            </dd>

            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.BasePrice)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.BasePrice)
            </dd>
        </dl>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="RoomTypeId" />
            <div class="text-center">
                <input type="submit" value="Delete" class="btn btn-danger me-2" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>
