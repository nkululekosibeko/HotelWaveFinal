@model HotelWaveFinal.Models.RoomType

@{
    ViewData["Title"] = "Edit Room Type";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <div class="text-white py-2">
                    <h2>Edit Room Type</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    <input type="hidden" asp-for="RoomTypeId" />

                    <div class="form-group mb-3">
                        <label asp-for="TypeName" class="form-label"></label>
                        <input asp-for="TypeName" class="form-control" />
                        <span asp-validation-for="TypeName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="BasePrice" class="form-label"></label>
                        <input asp-for="BasePrice" class="form-control" />
                        <span asp-validation-for="BasePrice" class="text-danger"></span>
                    </div>

                    <div class="text-center">
                        <input type="submit" value="Save" class="btn btn-primary me-2" />
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
