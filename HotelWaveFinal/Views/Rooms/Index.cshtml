@model IEnumerable<HotelWaveFinal.Models.Room>

@{
    ViewData["Title"] = "Room List";
}

<div class="container my-5" style="position: relative; padding: 60px 0;">
    <img src="~/assets/royal-master/image/about_banner.jpg" alt="Background" class="background-image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;"> <!-- Background image -->
    <div class="overlay"></div> <!-- Overlay for dark navy color -->
    <div class="card shadow border-0 mx-auto" style="width: 85%; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);">
        <!-- Added border radius and shadow -->
        <div class="card-header bg-info bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <div class="text-white py-2">
                        <h2>Room List</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <p>
                <a asp-action="Create" class="btn btn-success">Create New Room</a>
            </p>
            <div style="overflow-x:auto;">
                <!-- Ensures horizontal scroll if content overflows -->
                <table class="table table-hover" style="min-width: 100%;">
                    <!-- Table covers full container width -->
                    <thead class="table-dark">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.RoomNumber)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsAvailable)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PricePerNight)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.RoomType)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoomNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsAvailable)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PricePerNight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.RoomType.TypeName)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-info btn-sm">Details</a>
                                    <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<style>
    /* Overlay styles */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 165, 0, 0.1); /* Dark orange with 30% transparency */
        z-index: 0; /* Below the content but above the background image */
    }

    /* Ensure the image is behind the overlay */
    .background-image {
        z-index: -1; /* Set background image behind everything else */
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
