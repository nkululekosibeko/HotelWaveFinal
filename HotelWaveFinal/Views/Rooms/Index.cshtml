@model IEnumerable<HotelWaveFinal.Models.Room>

@{
    ViewData["Title"] = "Room List";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <div class="text-white py-2">
                    <h2>Room List</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <p>
            <a asp-action="Create" class="btn btn-success">Create New Room</a>
        </p>
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RoomNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsAvailable)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PricePerNight)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.RoomType)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoomNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsAvailable)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PricePerNight)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RoomType.TypeName)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.RoomId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.RoomId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.RoomId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
