@model HotelWaveFinal.Models.Room

@{
    ViewData["Title"] = "Edit Room";
}

<div class="container my-5" style="position: relative; padding: 60px 0;">
    <img src="~/assets/royal-master/image/about_banner.jpg" alt="Background" class="background-image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;"> <!-- Background image -->
    <div class="overlay"></div> <!-- Overlay for dark navy color -->
    <div class="card shadow border-0 mx-auto" style="width: 45%; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);">
        <!-- Added border radius and shadow -->
        <div class="card-header bg-warning bg-gradient py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <div class="text-dark py-2">
                        <h2 class="text-dark">Edit Room</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RoomId" />

                <div class="form-floating mb-3">
                    <input asp-for="RoomNumber" class="form-control" />
                    <label asp-for="RoomNumber" class="ms-2 text-muted">Room Number</label>
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>

                <div class="form-floating form-check mb-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                    </label>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="PricePerNight" class="form-control" />
                    <label asp-for="PricePerNight" class="ms-2 text-muted">Price Per Night</label>
                    <span asp-validation-for="PricePerNight" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <select asp-for="RoomTypeId" class="form-select" asp-items="ViewBag.RoomTypeId"></select>
                    <label asp-for="RoomTypeId" class="ms-2 text-muted">Room Type</label>
                    <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <input type="submit" value="Save" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    /* Overlay styles */
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(255, 165, 0, 0.1); /* Dark orange with 30% transparency */
        z-index: 0; /* Below the content but above the background image */
    }

    /* Ensure the image is behind the overlay */
    .background-image {
        z-index: -1; /* Set background image behind everything else */
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}