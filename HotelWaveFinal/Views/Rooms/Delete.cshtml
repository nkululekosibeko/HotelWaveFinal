@model HotelWaveFinal.Models.Room

@{
    ViewData["Title"] = "Delete Room";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <div class="text-white py-2">
                    <h2 class="text-light">Delete Room</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <h3 class="text-center text-danger">Are you sure you want to delete this room?</h3>
        <hr />
        <dl class="row mb-4">
            <dt class="col-sm-3">Room Number</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.RoomNumber)</dd>

            <dt class="col-sm-3">Availability</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IsAvailable)</dd>

            <dt class="col-sm-3">Price Per Night</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.PricePerNight)</dd>

            <dt class="col-sm-3">Room Type</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.RoomType.TypeName)</dd>
        </dl>

        <div class="text-center">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="RoomId" />
                <button type="submit" class="btn btn-danger me-2">
                    <i class="bi bi-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>
