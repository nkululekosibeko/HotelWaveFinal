@model HotelWaveFinal.Models.Payment

<div class="container my-5" style="position: relative; padding: 60px 0;">
    <!-- Background Image -->
    <img src="~/assets/royal-master/image/about_banner.jpg" alt="Background"
         class="background-image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">
    <div class="overlay"></div> <!-- Overlay for dark navy color -->

    <h2 class="text-center mb-4 text-white">Payment Confirmation</h2>
    <input type="hidden" asp-for="PaymentId" />

    <div class="card shadow border-0 mx-auto" style="width: 85%; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);">
        <div class="card-body">
            <p class="lead">Thank you for your payment; your transaction was successful!</p>
            <p><strong>Payment ID:</strong> @Model.PaymentId</p>
            <p><strong>Amount Paid:</strong> @Model.Amount.ToString("C")</p>
            <p><strong>Payment Status:</strong> @Model.PaymentStatus</p>
            <p><strong>Payment Date:</strong> @Model.PaymentDate.ToShortDateString()</p>
        </div>
    </div>

    <div class="text-center">
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mt-4">
            <i class="bi bi-house-fill"></i> Back to Home
        </a>
    </div>
</div>

<!-- CSS Styling for background image and overlay -->
<style>
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3); /* Dark overlay with 30% transparency */
        z-index: 0;
    }

    .background-image {
        z-index: -1;
    }

    /* Optional: Add more specific styles for the card or other elements if needed */
</style>
