@model IEnumerable<HotelWaveFinal.Models.Payment>

<div class="container my-5" style="position: relative; padding: 60px 0;">
    <!-- Background Image -->
    <img src="~/assets/royal-master/image/about_banner.jpg" alt="Background"
         class="background-image" style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">
    <div class="overlay"></div> <!-- Overlay for dark navy color -->

    <div class="card shadow border-0 mx-auto" style="width: 85%; border-radius: 10px; box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);">
        <div class="card-header bg-secondary bg-gradient py-3 text-center">
            <h2 class="text-white py-2">Payments</h2>
        </div>

        <div class="card-body p-4">
            <div class="row pb-3">
                <div class="col-6">
                </div>
            </div>

            <table class="table table-bordered table-striped" style="width:100%;">
                <thead>
                    <tr>
                        <th>Payment Method</th>
                        <th>Amount</th>
                        <th>Payment Date</th>
                        <th>Booking ID</th>
                        <th>Payment Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.PaymentMethod)</td>
                            <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                            <td>@Html.DisplayFor(modelItem => item.PaymentDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.BookingId)</td>
                            <td>@Html.DisplayFor(modelItem => item.PaymentStatus)</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.PaymentId" class="btn btn-sm btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.PaymentId" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- CSS Styling for background image and overlay -->
<style>
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.3); /* Dark overlay with 30% transparency */
        z-index: 0;
    }

    .background-image {
        z-index: -1;
    }

    /* You can add more specific styles for tables and buttons here if necessary */
</style>

@section Scripts {
    <script src="~/js/payment.js"></script>
}
