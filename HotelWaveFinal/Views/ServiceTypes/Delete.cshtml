@model HotelWaveFinal.Models.ServiceType

@{
    ViewData["Title"] = "Delete";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-danger bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <div class="text-white py-2">
                    <h2>Delete Service Type</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <h3>Are you sure you want to delete this?</h3>
        <h4>Service Type</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TypeName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TypeName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BasePrice)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BasePrice)
            </dd>
        </dl>
    </div>
    <div class="card-footer text-end">
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="ServiceTypeId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
        </form>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
