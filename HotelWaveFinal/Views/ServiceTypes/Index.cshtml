@model IEnumerable<HotelWaveFinal.Models.ServiceType>

@{
    ViewData["Title"] = "Service Type List";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <div class="text-white py-2">
                    <h2>Service Type List</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <p>
            <a asp-action="Create" class="btn btn-success">Create New Service Type</a>
        </p>
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.First().TypeName)</th>
                    <th>@Html.DisplayNameFor(model => model.First().Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(u => u.TypeName))
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TypeName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ServiceTypeId" class="btn btn-warning btn-sm">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.ServiceTypeId" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.ServiceTypeId" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
