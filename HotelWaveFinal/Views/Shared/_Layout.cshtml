<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">



    <link rel="icon" href="@Url.Content("~/assets/royal-master/image/favicon.png")" type="image/png">
    <title>@ViewData["Title"] - Hotel Wave</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css"   />
    <!-- CSS Links -->
    <link rel="stylesheet" href="@Url.Content("~/assets/royal-master/css/bootstrap.css")">
    <link rel="stylesheet" href="@Url.Content("~/assets/royal-master/vendors/linericon/style.css")">
    <link rel="stylesheet" href="@Url.Content("~/assets/royal-master/css/font-awesome.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/assets/royal-master/vendors/owl-carousel/owl.carousel.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/assets/royal-master/vendors/bootstrap-datepicker/bootstrap-datetimepicker.min.css")">
    <link rel="stylesheet" href="@Url.Content("~/assets/royal-master/vendors/nice-select/css/nice-select.css")">
    <link rel="stylesheet" href="@Url.Content("~/assets/royal-master/css/style.css")">
    <link rel="stylesheet" href="@Url.Content("~/assets/royal-master/css/responsive.css")">

</head>

<body>
    @RenderBody()

    <!--================ Header Area Start =================-->
    <header class="header_area">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-light">

                <a class="navbar-brand navbar-brand-custom" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/assets/royal-master/image/Logo.png" alt="Logo" class="navbar-logo"> <!-- Use the appropriate class -->
                </a>


                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <div class="collapse navbar-collapse offset" id="navbarSupportedContent">
                    <ul class="nav navbar-nav menu_nav ml-auto">
                        <!-- Customer-specific links -->
                        @if (User.IsInRole(SD.Role_Cust))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Bookings" asp-action="MyBookings">My Bookings</a>
                            </li>
                        }
                        <!-- Admin-specific links with dropdown -->
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item submenu dropdown">
                                <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Hotel Management</a>
                                <ul class="dropdown-menu">
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Rooms" asp-action="Index">Rooms</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="RoomTypes" asp-action="Index">Room Types</a>
                                    </li>
                      @*               <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Services" asp-action="Index">Services</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="ServiceTypes" asp-action="Index">Service Types</a>
                                    </li> *@
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Bookings" asp-action="Index">Bookings</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Payments" asp-action="Index">Payments</a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                    <!-- User Login Partial -->
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </div>
    </header>

    <!--================ Header Area End =================-->
    <!--================ Rendered Body Start =================-->
    <div class="container">
        <main role="main" class="main-content">
            <!-- Applied the main-content class here -->
            <partial name="_NotificationPartial" />
            @RenderBody()
        </main>
    </div>
    <!--================ Rendered Body Area End =================-->
    <!--================ Footer Area Start =================-->
    <footer class="footer-area section_gap">
        <div class="container">
            <div class="row">
                <div class="col-lg-3  col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6 class="footer_title">Our Pride</h6>
                        <p>
                            At Hotel Wave, we pride ourselves on exceptional hospitality, 
                            stunning ocean views, and a dedicated team committed to creating 
                            memorable experiences. Discover comfort and adventure in the heart 
                            of Durban.
                        </p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6 class="footer_title">Our Qualities</h6>
                        <div class="row">
                            <div class="col-4">
                                <ul class="list_style">
                                    <li><a href="#"> Welcoming </a></li>
                                    <li><a href="#"> Comfortable </a></li>
                                    <li><a href="#"> Convenient </a></li>
                                    <li><a href="#">  Luxurious </a></li>  
                                </ul>
                            </div>
                            <div class="col-4">
                                <ul class="list_style">
                                    <li><a href="#"> Scenic </a></li>
                                    <li><a href="#"> Friendly </a></li>
                                    <li><a href="#"> Innovative </a></li>
                                    <li><a href="#"> Relaxing </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-footer-widget">
                        <h6 class="footer_title">More Info</h6>
                        <p>
                            Find out more about us through enquireies.
                        </p>
                        <div id="mc_embed_signup">
                            <form target="_blank" action="https://spondonit.us12.list-manage.com/subscribe/post?u=1462626880ade1ac87bd9c93a&amp;id=92a4423d01" method="get" class="subscribe_form relative">
                                <div class="input-group d-flex flex-row">
                                    <input name="EMAIL" placeholder="Email Address" required="" type="email">
                                    <button class="btn sub-btn"><span class="lnr lnr-location"></span></button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6">
                    <div class="single-footer-widget instafeed">
                        <h6 class="footer_title">InstaFeed</h6>
                        <ul class="list_style instafeed d-flex flex-wrap">
                            <li><img src="~/assets/royal-master/image/instagram/Image-01.jpg" alt=""></li>
                            <li><img src="~/assets/royal-master/image/instagram/Image-02.jpg" alt=""></li>
                            <li><img src="~/assets/royal-master/image/instagram/Image-03.jpg" alt=""></li>
                            <li><img src="~/assets/royal-master/image/instagram/Image-04.jpg" alt=""></li>
                            <li><img src="~/assets/royal-master/image/instagram/Image-05.jpg" alt=""></li>
                            <li><img src="~/assets/royal-master/image/instagram/Image-06.jpg" alt=""></li>
                            <li><img src="~/assets/royal-master/image/instagram/Image-07.jpg" alt=""></li>
                            <li><img src="~/assets/royal-master/image/instagram/Image-08.jpg" alt=""></li>

                        </ul>
                    </div>
                </div>
            </div>            
    </footer>
    <!--================ Footer Area End =================-->
    <!-- Script Links -->
    <script src="@Url.Content("~/assets/royal-master/js/jquery-3.2.1.min.js")"></script>
    <script src="@Url.Content("~/assets/royal-master/js/popper.js")"></script>
    <script src="@Url.Content("~/assets/royal-master/js/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/assets/royal-master/vendors/owl-carousel/owl.carousel.min.js")"></script>
    <script src="@Url.Content("~/assets/royal-master/js/jquery.ajaxchimp.min.js")"></script>
    <script src="@Url.Content("~/assets/royal-master/js/mail-script.js")"></script>
    <script src="@Url.Content("~/assets/royal-master/vendors/bootstrap-datepicker/bootstrap-datetimepicker.min.js")"></script>
    <script src="@Url.Content("~/assets/royal-master/vendors/nice-select/js/jquery.nice-select.js")"></script>
    <script src="@Url.Content("~/assets/royal-master/js/stellar.js")"></script>
    <script src="@Url.Content("~/assets/royal-master/vendors/lightbox/simpleLightbox.min.js")"></script>
    <script src="@Url.Content("~/assets/royal-master/js/custom.js")"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
