@{
    ViewData["Title"] = "Home Page";
}

<div class="container">

    <!-- Hero Section -->
    <div class="text-center d-flex align-items-center justify-content-center" style="height: 50vh; background-image: url('/images/index.jpg'); background-size: cover; background-position: center; color: white; font-weight: bold; position: relative;">
        <div style="background-color: rgba(0, 0, 0, 0.5); position: absolute; top: 0; left: 0; right: 0; bottom: 0;"></div>
        <div style="z-index: 1;">
            <h1 class="display-4" style="font-size: 3.5rem; letter-spacing: 2px;">
                WELCOME TO
            </h1>
            <h2 style="font-size: 2.5rem;">
                The Deluxe Resort & Spa Hotel
            </h2>
        </div>
    </div>

    <!-- Welcome Section -->
    <div class="container my-5">
        <div class="row no-gutters align-items-center bg-light shadow-lg" style="border-radius: 15px;">
            <!-- Left Column: Text -->
            <div class="col-md-6 p-5">
                <h1 style="font-weight: bold; color: #5A4634;">Welcome to your luxurious home away from home</h1>
                <p style="color: #5A4634; font-size: 1.25rem; line-height: 1.6;">
                    Write a paragraph that talks about your brand or property here. Convince your prospective clients to choose you by highlighting qualities that set you apart from the competition. Seal the deal with compelling details!
                </p>
            </div>
            <!-- Right Column: Image -->
            <div class="col-md-6">
                <img src="/images/index6.jpg" alt="Relaxing by the pool" class="img-fluid" style="border-radius: 15px 0 0 15px;">
            </div>
        </div>
    </div>

    <!-- Rooms Section -->
    <div class="container my-5">
        <div class="row text-center">
            <div class="col-md-3 mb-4">
                <div class="card shadow-lg h-100" style="border-radius: 15px; background-color: #F0F9FA;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">De Luxe Room</h3>
                        <p class="card-text">2 adults | 1 child below 7</p>
                        <p class="card-text">from R 189. 00 a night</p>
                        <div class="mt-auto">
                            <button class="btn btn-outline-primary mt-3">Book Now</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card shadow-lg h-100" style="border-radius: 15px; background-color: #FFF7E5;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">De Luxe Sea View</h3>
                        <p class="card-text">2 adults | 1 child below 7</p>
                        <p class="card-text">from R 209, 87 a night</p>
                        <div class="mt-auto">
                            <button class="btn btn-outline-warning mt-3">Book Now</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card shadow-lg h-100" style="border-radius: 15px; background-color: #E8F5E9;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">The Wellhall Family Suite</h3>
                        <p class="card-text">4 adults | 2 children below 7</p>
                        <p class="card-text">from R 399, 99 a night</p>
                        <div class="mt-auto">
                            <button class="btn btn-outline-success mt-3">Book Now</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="card shadow-lg h-100" style="border-radius: 15px; background-color: #FDECEA;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">Presidential Suite</h3>
                        <p class="card-text">6 adults | 3 children below 7</p>
                        <p class="card-text">from R 799, 87 a night</p>
                        <div class="mt-auto">
                            <button class="btn btn-outline-danger mt-3">Book Now</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Services Section -->
    <div class="container my-5">
        <h2 class="text-center" style="font-weight: bold; color: #5A4634;">Our Premium Services</h2>
        <div class="row text-center mt-4">
            <div class="col-md-4 mb-4">
                <div class="p-4 shadow-lg" style="background-color: #FFF7E5; border-radius: 15px;">
                    <i class="fa fa-spa fa-3x mb-3" style="color: #5A4634;"></i>
                    <h4>Spa & Wellness</h4>
                    <p>Relax and rejuvenate in our luxurious spa with a wide range of treatments.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 shadow-lg" style="background-color: #F0F9FA; border-radius: 15px;">
                    <i class="fa fa-utensils fa-3x mb-3" style="color: #5A4634;"></i>
                    <h4>Fine Dining</h4>
                    <p>Indulge in gourmet meals curated by world-class chefs at our restaurant.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 shadow-lg" style="background-color: #E8F5E9; border-radius: 15px;">
                    <i class="fa fa-swimmer fa-3x mb-3" style="color: #5A4634;"></i>
                    <h4>Pool & Fitness</h4>
                    <p>Stay active in our modern gym and relax by the pool with breathtaking views.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Family Suite Section -->
    <div class="text-center d-flex align-items-center justify-content-center" style="height: 50vh; background-image: url('/images/index4.jpg'); background-size: cover; background-position: center; position: relative;">
        <!-- Dark overlay -->
        <div style="background-color: rgba(0, 0, 0, 0.6); position: absolute; top: 0; left: 0; right: 0; bottom: 0;"></div>
        <div style="z-index: 1; color: white;">
            <h2>The Family Suite</h2>
            <p>An intriguing caption that describes the room goes here. Use a flattering photo and let the description captivate your audience!</p>
        </div>
    </div>

    <!-- Testimonials Section -->
    <div class="container my-5">
        <h2 class="text-center" style="font-weight: bold; color: #5A4634;">What Our Guests Are Saying</h2>
        <div class="row mt-4">
            <div class="col-md-4 mb-4">
                <div class="p-4 shadow-lg" style="background-color: #FFF7E5; border-radius: 15px;">
                    <p>"The best vacation ever! The staff was so friendly and the amenities were top-notch."</p>
                    <p><strong>- John Doe</strong></p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 shadow-lg" style="background-color: #F0F9FA; border-radius: 15px;">
                    <p>"We had a fantastic time. The room was luxurious and the spa treatments were heavenly."</p>
                    <p><strong>- Jane Smith</strong></p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="p-4 shadow-lg" style="background-color: #E8F5E9; border-radius: 15px;">
                    <p>"A memorable stay with incredible food, beautiful rooms, and a perfect location."</p>
                    <p><strong>- Emily Clark</strong></p>
                </div>
            </div>
        </div>
    </div>

    <!-- Contact and Social Media Section -->
    <div class="text-center py-5" style="background-color: #F5F3EF;">
        <div class="container">
            <div class="row">
                <!-- Office Hours Section -->
                <div class="col-md-6 mb-4">
                    <div class="p-4" style="background-color: #FFF7E5; border-radius: 15px;">
                        <h3 style="color: #5A4634;">Office Hours</h3>
                        <p style="font-size: 1.1rem;">Monday to Friday: <strong>9:00 am to 6:00 pm</strong></p>
                        <p style="font-size: 1.1rem;">Saturday: <strong>9:00 am to 12:00 noon</strong></p>
                    </div>
                </div>
                
                <!-- Social Media and Contact Info Section -->
                <div class="col-md-6 mb-4">
                    <div class="p-4" style="background-color: #F0F9FA; border-radius: 15px;">
                        <h3 style="color: #5A4634;">Get Social</h3>
                        <p style="font-size: 1.1rem;">Tag us in your photos!</p>
                        <p class="mb-4" style="font-size: 1.1rem;">#HotelWave, #GoodVibes</p>

                        <p style="font-size: 1.1rem;"><i class="fa fa-map-marker-alt"></i> Reservations Office: 123 Anywhere St., Any City ST 12345</p>
                        <p style="font-size: 1.1rem;"><i class="fa fa-phone"></i> 1123-456-7890</p>
                        <p style="font-size: 1.1rem;"><i class="fa fa-envelope"></i> hello@reallygreatsite.com</p>
                        
                        <div class="mt-4">
                            <a href="#" class="btn btn-outline-primary mx-2 rounded-circle"><i class="fa fa-facebook"></i></a>
                            <a href="#" class="btn btn-outline-info mx-2 rounded-circle"><i class="fa fa-twitter"></i></a>
                            <a href="#" class="btn btn-outline-danger mx-2 rounded-circle"><i class="fa fa-instagram"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
